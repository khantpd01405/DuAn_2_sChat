<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/toolbar</item>
        <!--<item name="android:textColorPrimary">@android:color/black</item>-->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme_2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionOverflowButtonStyle">@android:color/white</item>
    </style>


    <style name="AppTheme1" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/secondary_text_light_nodisable</item>
        <item name="android:colorForeground">@color/colorLoginButton1</item>
    </style>

    <style name="buttonLogin_kitkat">
        <item name="colorButtonNormal">@color/colorLoginButton1</item>
        <item name="colorControlHighlight">@color/colorLoginButton2</item>
    </style>

    <style name="colorSignupButton_kitkat">
        <item name="colorButtonNormal">@color/colorSignupButton1</item>
        <item name="colorControlHighlight">@color/colorSignupButton2</item>
    </style>

    <style name="buttonLogin">
        <item name="android:colorButtonNormal">@color/colorLoginButton1</item>
        <item name="android:colorControlHighlight">@color/colorLoginButton2</item>
    </style>

    <style name="colorSignupButton">
        <item name="android:colorButtonNormal">@color/colorSignupButton1</item>
        <item name="android:colorControlHighlight">@color/colorSignupButton2</item>
    </style>



    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#999999</item>
        <item name="colorControlActivated">#999999</item>
    </style>
</resources>
